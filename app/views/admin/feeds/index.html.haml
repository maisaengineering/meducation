%h1 View/Manage Feeds
#dashFormsList.dashPanel.managePanel
  %span.panelName Feeds
  #loading
    %table#manageFormsTable.manageTable{border: 0, cellpadding: 0, cellspacing: 0}
      %tr.manageTableHeader
        %th Title
        %th Author
        %th  frequency
        %th
        %th
        %th

      - if @feeds.blank?
        %tr
          %td{colspan: '6', align: 'center'} No Feeds defined yet..
      - else
        - @feeds.each do |feed|
          %tr
            %td= feed.title
            %td= feed.author
            %td= feed.frequency
            %td= link_to 'Show', admin_feed_path(feed)
            %td= link_to 'Edit', edit_admin_feed_path(feed)
            %td= link_to 'Destroy', admin_feed_path(feed),method: :delete, data: { :confirm => 'Are you sure?' }
    .panelActionContainer
      %ul
        %li
          = link_to 'New Feed', new_admin_feed_path