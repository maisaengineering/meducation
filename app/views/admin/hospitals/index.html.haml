%h1 View/Manage Hospitals
#dashFormsList.dashPanel.managePanel
  %span.panelName Hospitals
  #loading
    %table#manageFormsTable.manageTable{border: 0, cellpadding: 0, cellspacing: 0}
      %tr.manageTableHeader
        %th Name
        %th Preferred Name
        %th Members
        %th
        %th
        %th
      - if @hospitals.blank?
        %tr
          %td{colspan: '6', align: 'center'} No Hospitals defined yet..
      - else
        - @hospitals.each do |hospital|
          %tr
            %td= hospital.name
            %td= hospital.preferred_name
            %td= hospital_count(hospital.id)
            %td= link_to 'Show', admin_hospital_path(hospital)
            %td= link_to 'Edit', edit_admin_hospital_path(hospital)
            %td=# link_to 'Destroy', admin_hospital_path(hospital),method: :delete, data: { :confirm => 'Are you sure?' }
    .panelActionContainer
      %ul
        %li
          = link_to 'New Hospital', new_admin_hospital_path