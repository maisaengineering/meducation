- content_for :head do
  .hButton.hbBack{:onclick => "window.location.href='#{m_top_dashboard_path(@profiles)}'"}
    .hbBackOne
    .hbBackTwo
    .hbBackThree
    %span back
- content_for :page_title do
  .headerPageName
    Change password

#scrollContainer.scrollContainer
  .contentContainer
    .prefernceContainer
      .prefernceHeader Preferences
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
        .prefernceText
          Please enter the information requested below to change your password
          %br/
          - if notice
            .formTopErrorText
              #div.m_error
                Oops! #{notice}.Please try again
          %br/
          = f.password_field :current_password, :placeholder=> "Enter current password", class: "preferenceInput"
          = f.password_field :password, :placeholder => "New password", class: "preferenceInput"
          = f.password_field :password_confirmation, :placeholder => "New password (confirm)", class: "preferenceInput"
          .preferenceChangeButton{:onClick => ""} change password

- content_for :meta_tag do
  %meta{:content => "user-scalable=no, width=640, initial-scale=.5, height=10000", :name => "viewport"}/

- content_for :javascript do
  %script{:language => "text/javascript"}
    window.addEventListener('load', function() { FastClick.attach(document.body); }, false);
    document.addEventListener('DOMContentLoaded', function () { setTimeout(loaded, 200); }, false);

:javascript
  $('.preferenceChangeButton').click(function(){
      $("form#users").submit();
  });


