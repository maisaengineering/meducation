= form_for @form, :html => { :autocomplete => "off", :id=>"commentForm",  :class => "standardForm"}, authenticity_token: true do |f|
  -if @form.errors.any?
    #error_explanation
      %h2= "#{pluralize(@form.errors.count, "error")} prohibited this form from being saved:"
      %ul
        - @form.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :content
    = f.text_area :content
  .actions
    = f.submit 'Save'

%script{:src => "../jquery.validate.js", :type => "text/javascript"}
:javascript
  $(document).ready(function(){
    $("#commentForm").validate({
    rules: {
      form_name: "required"
    },
    messages: {
      form_name: "Please enter your firstname"
      }
    });
  });
:css
  label.error {color: #E3981C; font-size: 12px; font-weight: 700;}
  p { clear: both; }
  .submit { margin-left: 12em; }
  em { font-weight: bold; padding-right: 1em; vertical-align: top; }    
